{
  "manifest_version": 3,
  "name": "Taurus",
  "version": "0.1.0",
  "description": "Polymarket overlay for X.com",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "sidePanel",
    "scripting",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_title": "Taurus",
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "taurus_logo_inverted.png",
      "48": "taurus_logo_inverted.png",
      "128": "taurus_logo_inverted.png"
    }
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "src/content/index.tsx"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "taurus_logo_inverted.png"
      ],
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ]
    }
  ]
}
